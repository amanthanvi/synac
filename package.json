{
  "name": "synac",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.11 <23"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview --port 4321 --host",
    "start": "HOST=0.0.0.0 NODE_ENV=production node server.mjs",
    "astro": "astro",
    "typecheck": "astro check",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.astro,.mdx",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --coverage",
    "test:offline": "playwright test tests/e2e/offline-search.spec.ts",
    "e2e:install": "npx playwright install --with-deps",
    "e2e": "playwright test",
    "etl:nist": "node scripts/fetch-nist.mjs",
    "etl:mitre": "node scripts/fetch-mitre.mjs",
    "etl:merge": "node scripts/build-merge.mjs",
    "etl:all": "npm run etl:mitre && npm run etl:nist && npm run etl:merge",
    "etl:clean": "node scripts/etl-clean.mjs",
    "lh:budget": "npx -y lighthouse http://localhost:4321 --quiet --chrome-flags='--headless=new' --budgets-path=./lighthouse/budgets.json --only-categories=performance --preset=desktop",
    "lh:preview": "bash scripts/lh_preview.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@vite-pwa/astro": "^1.1.0",
    "astro": "^5.13.3",
    "minisearch": "^7.1.2",
    "fflate": "^0.8.1",
    "sirv-cli": "^3.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.5",
    "@astrojs/mdx": "^4.3.4",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "astro-eslint-parser": "^1.2.2",
    "cheerio": "^1.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "fast-xml-parser": "^4.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,astro,mdx}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ]
  }
}
