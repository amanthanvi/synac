{
  "name": "synac",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview --port 4321 --host",
    "astro": "astro",
    "typecheck": "astro check",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.astro,.mdx",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --coverage",
    "e2e:install": "npx playwright install --with-deps",
    "e2e": "playwright test",
    "etl:nist": "node scripts/fetch-nist.mjs",
    "etl:mitre": "node scripts/fetch-mitre.mjs",
    "etl:merge": "node scripts/build-merge.mjs",
    "etl:all": "npm run etl:nist && npm run etl:mitre && npm run etl:merge",
    "lh:budget": "npx -y lighthouse http://localhost:4321 --quiet --chrome-flags='--headless=new' --budgets-path=./lighthouse/budgets.json --only-categories=performance --preset=desktop",
    "lh:preview": "bash scripts/lh_preview.sh"
  },
  "dependencies": {
    "@vite-pwa/astro": "^1.1.0",
    "astro": "^5.13.3",
    "minisearch": "^7.1.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.5",
    "@astrojs/mdx": "^4.3.4",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
